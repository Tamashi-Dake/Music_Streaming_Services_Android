<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="190dp"
    android:layout_marginEnd="10dp"
    android:layout_height="wrap_content"
    app:cardCornerRadius="10dp" android:background="@color/theme_color" android:outlineProvider="none">

    <LinearLayout
        android:id="@+id/itemRandom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/theme_color"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingStart="10dp"
        >

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/imgRandom"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:scaleType="centerCrop"
            android:src="@drawable/img_1" app:shapeAppearanceOverlay="@style/rounded_corner"/>

        <TextView
            android:id="@+id/tvRandomTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Artist"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:paddingBottom="10dp"
            />

    </LinearLayout>
</androidx.cardview.widget.CardView>